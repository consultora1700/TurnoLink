{
  "name": "turnero-saas",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de Turnos Online SaaS Multi-Tenant",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:web": "pnpm --filter @turnero/web dev",
    "dev:api": "pnpm --filter @turnero/api dev",
    "build": "pnpm run --parallel build",
    "build:web": "pnpm --filter @turnero/web build",
    "build:api": "pnpm --filter @turnero/api build",
    "start": "pnpm run --parallel start",
    "lint": "pnpm run --parallel lint",
    "test": "pnpm run --parallel test",
    "test:e2e": "pnpm --filter @turnero/api test:e2e",
    "db:generate": "pnpm --filter @turnero/api prisma:generate",
    "db:migrate": "pnpm --filter @turnero/api prisma:migrate",
    "db:seed": "pnpm --filter @turnero/api prisma:seed",
    "db:studio": "pnpm --filter @turnero/api prisma:studio",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "playwright": "^1.58.0",
    "puppeteer": "^24.36.0"
  },
  "dependencies": {
    "pg": "^8.18.0"
  }
}
